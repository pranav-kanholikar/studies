<%= form_for @page, url: subject_pages_path(params[:subject_id]) do |f| %>

  <% if @page.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :no_of_pages, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :no_of_pages, :class => 'form-control' %>
    </div>
    <%=f.error_span(:no_of_pages) %>
  </div>
  <div class="form-group">
    <%= f.label :no_of_topics, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :no_of_topics, :class => 'form-control' %>
    </div>
    <%=f.error_span(:no_of_topics) %>
  </div>
  
<div class="form-group">
    <%= f.label :subject_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :subject_id, :class => 'form-control', :value => params[:subject_id] %>
    </div>
    <%=f.error_span(:no_of_topics) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                subject_pages_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
