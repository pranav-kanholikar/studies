<%- model_class = Page -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:no_of_pages) %>:</strong></dt>
  <dd><%= @page.no_of_pages %></dd>
  <dt><strong><%= model_class.human_attribute_name(:no_of_topics) %>:</strong></dt>
  <dd><%= @page.no_of_topics %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject_id) %>:</strong></dt>
  <dd><%= @page.subject_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              subject_pages_path(@page.subject_id), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_subject_page_path(@page), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              subject_page_path(@page),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
