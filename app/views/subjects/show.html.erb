<%- model_class = Subject -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @subject.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:author) %>:</strong></dt>
  <dd><%= @subject.author %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publication) %>:</strong></dt>
  <dd><%= @subject.publication %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cd) %>:</strong></dt>
  <dd><%= @subject.cd %></dd>
  <dt><strong><%= model_class.human_attribute_name(:studies) %>:</strong></dt>
  <dd><%= @subject.studies %></dd>
</dl>

 <%= link_to 'Add pages', new_subject_page_path(@subject) %>
 <%= link_to t('.back', :default => t("helpers.links.back")),
              subjects_path, :class => 'btn btn-default'  %>
 <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_subject_path(@subject), :class => 'btn btn-default' %> 
 <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              subject_path(@subject),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %> 
